@model _2021_dotnet_g_28.Models.Domain.Contract
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["DetailsContract"];
}


<h2>@ViewData["Title"]</h2>




<div class="row">
    <div class="col-4">
        @Localizer["ContractNr"]
        :
        @Html.DisplayFor(model => model.ContractNr)
    </div>
    <div class="col-4">
        @Localizer["StartDate"]
        :
        @Html.DisplayFor(model => model.StartDate)
    </div>
    <div class="col-4">
        @Localizer["Duration"]
        :
        @Html.DisplayFor(model => model.Duration)
        @if (Model.Duration > 1)
        {<span>@Localizer["Years"]</span>}

        else
        {<span>@Localizer["Year"]</span>}
    </div>


</div>
<div class="row">
    <div class="col-4">
        <p>@Localizer["Company"]: @Model.Company.CompanyName</p>

    </div>
    <div class="col-4">
        @Localizer["EndDate"]
        :
        @Html.DisplayFor(model => model.EndDate)
    </div>
    <div class="col-4">
        @Localizer["Status"]
        :
        @Html.DisplayFor(model => model.Status)
    </div>
</div>

<div class="container col-md-10 align-self-center border text-center text-secondary">
    <h2 class="text-center"> ContractType info</h2>

    <div class="row">
        <div class="col-5 ">
            @Localizer["NameOfContract"]:
            @Html.DisplayFor(model => model.Type.Name)
        </div>
        <div class="col-5">
            @Localizer["MinDuration"]:
            @Html.DisplayFor(model => model.Type.MinDuration)

        </div>
    </div>
    <div class="row">
        <div class="col-5">
            @Localizer["MaxResponseTime"]:
            @Html.DisplayFor(model => model.Type.MaxResponseTime)
        </div>
        <div class="col-5">
            @Localizer["Availability"]:
            @if (Model.Type.IsOutsideBusinessHours)
            {<span>24/7</span>}
            else
            {<span>@Localizer["Weekdays"] (8-17)</span>}
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            @Localizer["PriceMonth"]:
            @Html.DisplayFor(model => model.Type.Price)
        </div>
        <div class="col-5">
            @Localizer["CreationMethod"]:
            @Html.DisplayFor(model => model.Type.CreationMethod)
        </div>
    </div>
</div>
<a class="btn btn-primary" asp-action="Index">@Localizer["BackToList"]</a>

