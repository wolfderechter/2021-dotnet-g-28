@using _2021_dotnet_g_28.Models.Viewmodels
@using _2021_dotnet_g_28.Models.Domain
@model TicketEditViewModel


@{ ViewData["Title"] = (bool)ViewData["IsEdit"] ? "Edit ticket" : "Create a new ticket"; }

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            @if (@ViewData.ContainsKey("Customers"))
            {
                <div class="form-group">
                    <label asp-for="CompanyNr"></label>
                    <select asp-for="CompanyNr" asp-items="@(ViewData["Customers"] as SelectList)" class="form-control">
                        <option disabled>Assign Company</option>
                    </select>
                    <span asp-validation-for="CompanyNr" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control"
                        asp-items="Html.GetEnumSelectList<TicketEnum.type>()">
                    <option disabled >Select Priority</option>
                </select>

                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label"></label>
                <textarea asp-for="Remark" class="form-control"></textarea>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Picture" class="form-control custom-file-input" accept="iamge/png,image/pdf,image/gif/video/mp4"/>
                    <label class="custom-file-label">Choose file...</label>
                </div>

            </div>

            <div class="form-group">
                @if ((bool)ViewData["IsEdit"])
                {
                    <input type="submit" value="Edit ticket" class="btn btn-primary" /> }
                else
                {
                    <input type="submit" value="Create ticket" class="btn btn-primary" />}

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>
<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });
</script>
